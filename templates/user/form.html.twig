{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{% if user is defined %} Edit {% else %}Add new {% endif %}User</h1>
    <form action="{% if user is defined %}{{ path('user_update') }}{% else %}{{ path('user_add') }} {% endif %}" method="post">
        <ul>
            <li><label>Lastname</label><input type="text" name="data[lastname]" value="{% if user is defined %}{{ user.lastname }} {% endif %}"></li>
            <li><label>Firstname</label><input type="text" name="data[firstname]" value="{% if user is defined %}{{ user.firstname }} {% endif %}"></li>
            <li><label>Phone</label><input type="text" name="data[phone]" value="{% if user is defined %}{{ user.phone }} {% endif %}"></li>
            <li>{% if user is defined %}<input type="hidden" name="data[id]" value="{{ user.id }}">{% endif %}<input type="submit" value="submit"></li>
        </ul>
    </form>


</div>
{% endblock %}
